<% if customer_signed_in? %>
  <h3>ユーザー 一覧</h3>
  <% @users.each do |user| %>
    <div>
      <%= link_to customer_path(user.id) do %>
        <%= attachment_image_tag user, :profil_image, :fill, 100, 100, format: 'jpeg' %>
      <% end %>
      名前：<%= user.name %>
      <p>
        <% if current_customer.following?(user) %>
          <%= link_to "フォローを外す", unfollow_path(user.id), method: :POST %>
        <% else %>
          <%= link_to "フォローする", follow_path(user.id), method: :POST %>
        <% end %>
      </p>
    </div>
  <% end %>
<% end %>

