<div class="card w-50 mx-auto mt-4 shadow-lg">
  <%= attachment_image_tag @post, :image, class:"card-img-top"; %>
  <div class="card-body">
    <div class="row">
      <div class="col-10">
        <p class="card-title">
          <strong><i class="far fa-flag"></i><span> <%= @post.title %></span></strong>
        </p>
        <p class="card-text">
          ジャンル：<%= @post.genre %>
        </p>
        <p class="card-text">投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
        <p class="card-text"><%=safe_join(@post.contents.split("\n"),tag(:br))%></p>


        <% if @post.customer == current_customer %>
          <%= link_to "消去", post_path(@post.id), method: :delete %>
          <%= link_to "編集", edit_post_path(@post.id) %>
        <% end %>
      </div>
    </div>
  </div>
</div>