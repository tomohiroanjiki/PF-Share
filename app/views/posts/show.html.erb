<h3>記事詳細ページ</h3>
<div>
  <p><%= attachment_image_tag @post, :image, :fill, 100, 100, format: 'jpeg' %></p>
  <p>タイトル：<%= @post.title %></p>
  <p>ジャンル：<%= @post.genre %></p>
  <p>記事の内容：<%= @post.contents %></p>
  <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post.customer == current_customer %>
    <%= link_to "消去", post_path(@post.id), method: :delete %>
    <%= link_to "編集", edit_post_path(@post.id) %>
  <% end %>
</div>